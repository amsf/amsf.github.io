---
permalink: /feed/index.xml
---

<?xml version="1.0" encoding="utf-8"?>

<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.data.var.name }}</title>
  <subtitle>{{ site.data.var.description }}</subtitle>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>tag:{{ site.data.var.domain }},2005:/</id>
  <link rel="alternate" type="text/html" hreflang="en" href="{{ site.data.var.base | prepend: site.data.var.url }}/"/>
  <link rel="self" type="application/atom+xml" href="{{ site.data.var.feed | prepend: site.data.var.base | prepend: site.data.var.url }}/"/>
  <rights>Copyright © {{ site.time | date: "%Y" }}, {{ site.data.var.user }}</rights>

  <author>
    <name>{{ site.data.var.user }}</name>
    <uri>{{ site.data.var.base | prepend: site.data.var.url }}/</uri>
    <email>{{ site.data.var.email }}</email>
  </author>

  {% for post in site.posts limit:300 %}
    {% if site.data.var.link_blog and post.link %}
      {% assign entry_link = post.link %}
    {% else %}
      {% assign entry_link = post.url | prepend: site.data.var.base | prepend: site.data.var.url %}
    {% endif %}

    {% capture entry_permalink %}
      {% if site.data.var.link_blog and post.link %}
        <p><a href="{{ post.url | prepend: site.data.var.base | prepend: site.data.var.url }}" title="Permalink to “{{ post.title | strip_html | xml_escape }}”">◉ Permalink</a></p>
      {% elsif site.data.var.link_blog != true and post.link %}
        <p><a href="{{ post.link }}">◉ Direct Link to Original Site</a></p>
      {% endif %}
    {% endcapture %}

    <entry>
      <title>{{ post.title | strip_html | xml_escape }}</title>
      <id>tag:{{ site.data.var.base | prepend: site.data.var.domain }},{{ post.date | date: "%Y" }}:{{ post.id }}/</id>
      <link rel="alternate" type="text/html" href="{{ entry_link }}"/>
      <updated>{{ post.date | date_to_xmlschema }}</updated>
      <author>
        <name>{{ site.data.var.user }}</name>
        <uri>{{ site.data.var.base | prepend: site.data.var.url }}/</uri>
        <email>{{ site.data.var.email }}</email>
      </author>
      <content type="html" xml:base="{{ site.data.var.base | prepend: site.data.var.url }}/">
        {% if site.data.var.rss_excerpt %}
          {{ post.excerpt | xml_escape }}
        {% else %}
          {{ post.content | xml_escape }}
        {% endif %}
        {{ entry_permalink | xml_escape}}
      </content>
    </entry>
  {% endfor %}
</feed>